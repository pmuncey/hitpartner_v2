<!-- Validation failure messages -->
<% if @match.errors.any? %>
  <% @match.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Request a hit</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_match" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for player_id -->
      <div class="form-group">

        <input type="hidden" value="<%= current_user.id %>" name="player_id">

      </div>

      <!-- Label and input for hitpartner_id -->
      <div class="form-group">
        <label for="hitpartner_id" class="control-label">
          Hitpartner
        </label>

        <%= select_tag(:hitpartner_id, options_from_collection_for_select(User.where(:college_tennis => true), :id, :name, @match.hitpartner_id), :class => "form-control") %>

      </div>

      <!-- Label and input for court_id -->
      <div class="form-group">
        <label for="court_id" class="control-label">
          Court
        </label>

        <%= select_tag(:court_id, options_from_collection_for_select(Court.all, :id, :name, @match.court_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Match
      </button>
      or
      <a href="/matches">Cancel</a>
    </form>
  </div>
</div>
