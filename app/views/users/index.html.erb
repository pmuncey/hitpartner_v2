<div class="page-header">


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Photo</th>
        <th>Utr</th>
        <th>Location</th>
        <th>Role</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td>
          <img src="<%= user.photo %>"</td>
        <td><%= user.utr %></td>
        <td><%= user.location %></td>
        <% if user.role == true %>
          <td>Hitpartner</td>
        <% else %>
          <td>Player</td>
        <% end %>
        <td><%= user.email %></td>
        <td>
          <a href="/users/<%= user.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
